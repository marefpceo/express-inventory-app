<%- include('./partials/head') %>
    
    <div class='container'>
        <%- include('./partials/header') %>
        <aside>
            <%- include('./partials/sidebar') %>
        </aside>
        <section>
            <h2><%= title %></h2>
            <hr>
            
            <div class='cards'>
              <% if (subcategory_list) { %>
                <% subcategory_list.forEach(subcategory => { %>
                  <div class='subcategory-card'>
                      <a href='/inventory/subcategory/<%= subcategory.id %>'>
                          <h3><%= subcategory.subcategory_name %></h3>
                      </a>
                  </div>
              <% }) %>
              <% } else { %>
               <p>No Subcategories to display. Add a Subcategory!</p>
              <% } %>
            </div>
        </section>
        <%- include('./partials/footer') %>
