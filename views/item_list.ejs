<%- include('./partials/head') %>
    
    <div class='container'>
        <%- include('./partials/header') %>
        <aside>
            <%- include('./partials/sidebar') %>
        </aside>
        <section>
            <div class='section-header'>
              <h2><%= title %></h2>
              <p><a href='/inventory/items/item_low_stock'>View Low Stock Items ONLY</a></p>
            </div>
            <hr>
            
            <span><em>*Low stock items highlighed in red</em></span>
            <div class='list-header'>
              <p>Item Name</p>
              <p>Total</p>
            </div>

            <ul class='item-list'>
              <% if (item_list) { %>
                <% item_list.forEach(item => { %>
                  <% if (item.number_in_stock <= item.low_limit) { %>
                  <li class='low-limit-item'>
                    <a href='<%= item.url %>'>
                      <p><%= item.name %> - <strong><%= item.brand %></strong></p>
                      <p><strong><%= item.number_in_stock %></strong></p>
                    </a>
                   </li> 
                      <% } else { %>
                        <li>
                          <a href='<%= item.url %>'>
                            <p><%= item.name %> - <strong><%= item.brand %></strong></p>
                            <p><strong><%= item.number_in_stock %></strong></p>
                          </a>
                        </li>
                    <% } %>
                <% }) %>
              <% } else { %>
               <p>No Items to display. Add a item!</p>
              <% } %>
            </ul>
        </section>
        
        <%- include('./partials/footer') %>
